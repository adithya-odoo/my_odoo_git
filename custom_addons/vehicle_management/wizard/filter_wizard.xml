<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
   <record id="report_filter_wizard_view_form" model="ir.ui.view">
       <field name="name">report.filter.wizard.view.form</field>
       <field name="model">report.filter</field>
       <field name="priority" eval="8"/>
       <field name="arch" type="xml">
           <form string="Report">
               <sheet>
               <group>
                   <group name="date">
                       <field name="start_date"/>
                       <field name="end_date"/>
                   </group>
                   <group name="ids_group">
                       <field name="advisor_ids" widget="many2many_tags"/>
                       <field name="customer_ids" widget="many2many_tags"/>
                   </group>
               </group>
               <footer>
                   <button name="action_print_report_pdf" string="Print PDF" type="object"
                           class="oe_highlight"/>
                    <button name="print_xlsx" string="Print Excel" type="object"
                            class="oe_highlight"/>
                   <button name="cancel" string="Cancel" special="cancel"/>
               </footer>
               </sheet>
           </form>
       </field>
   </record>
</odoo>