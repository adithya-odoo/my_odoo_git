<?xml version="1.0" ?>
<odoo>
   <data>
        <!--Template to send demo mail template for the customer-->
        <record id="vehicle_delivery_mail_template" model="mail.template">
            <field name="name">Email Template For Blog</field>
            <field name="model_id" ref="vehicle_management.model_vehicle_management"/>
            <field name="email_from">{{ object.company_id.email }}</field>
            <field name="email_to">{{object.partner_id.email}}</field>
            <field name="subject">Vehicle Delivery</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <div style="justify-content: center;background-color: #714B67; padding:0.6rem;padding-left: 35px;text-decoration: none; color: #fff; border-radius: 5px; font-size:13px;width:40%">
                        <h1>
                            Hi,
                            <t t-out="object.partner_id.name"/>
                        </h1>
                        <div>
                            <h2>
                                Your vehicle is ready to delivered to you, so we kindly hope you will be happy for our
                                service.
                            </h2>
                            <h1>Cost details:</h1><br/>
                            <h2>Product cost:</h2>
                            <h2>Product total cost: <t t-out="object.total_product_cost"/></h2><br/>
                            <h2>Labour cost:</h2>
                            <h2>Total labour cost: <t t-out="object.total_time_cost"/> </h2><br/>
                            <h1>Total cost:<t t-out="object.total_cost"/> </h1>
                        </div>
                    </div>
                    <br/>
                    <br/>
                    Regards :),
                    <br/>
                    <t t-out="object.company_id.name"/>
                    <br/>
                </div>
            </field>
        </record>
    </data>
</odoo>
