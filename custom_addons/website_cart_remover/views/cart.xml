<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="remove_cart" inherit_id="website_sale.cart_lines" name="Cart item remover">
        <xpath expr="//div[@name='website_sale_cart_line_price']" position="after">
            <a href="#" role="button" class="js_delete_product d-none d-md-inline-block small">
                <button id="item_remove_btn">
                    <i class="fa fa-trash-o" style="font-size:36px"/>
                </button>
            </a>
        </xpath>
        <xpath expr="//div[@id='cart_products']" position="after">
            <div class="remove_btn_id">
                <a href="#" role="button" class="remove_cart_item btn btn-primary  w-100">
                    Remove cart
                </a>
            </div>
        </xpath>
    </template>
</odoo>